// Variables
$mainColor = #333333
$baseFontSize = 20px;
$codeFontSize = 14px;

img
  width 100%

header
  color white
  background-image url('../../img/sierra-pano.jpg')
  background-size cover
  text-align center
  width 100%
  margin 0

.site-heading
  padding 60px 10px

  h1
    font-size $baseFontSize * 2.5

  hr
    max-width 100px
    border-width 3px
    border-color white

.navbar-custom
  margin 0
  border 0
  background transparent
  position absolute
  top 0
  left 0
  width 100%
  color white

footer
  padding 30px 0
  color #999
  text-align center
  background-color #f9f9f9
  border-top 1px solid #e5e5e5

article
  font-family 'Lora', serif
  font-size $baseFontSize
  color $mainColor



// Code highlight overrides
.highlight pre
  font-size $codeFontSize